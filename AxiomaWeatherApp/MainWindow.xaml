<Window x:Class="AxiomaWeatherApp.MainWindow"
       
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AxiomaWeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <local:FontSizeConverterOtherTemps x:Key="fontSizeConOtherTemps" />
        <local:FontSizeConverterOther x:Key="fontSizeConOther" />
        <local:FontSizeConverterDailyText x:Key="fontSizeConDailyText" />
        <local:FontSizeConverterDailyTemp x:Key="fontSizeConDailyTemp" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="FirstRow" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="CurrentForecast" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="place" IsReadOnly = "True" TextAlignment="Center" Text="{Binding CurrentWeather.Place, Mode = OneWay}" TextWrapping="Wrap" Grid.Row="0" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyText}}"/>

                <Grid x:Name="CurrentTempAndIcon" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="CurrentTemp" IsReadOnly = "True" TextAlignment="Center" Text="{Binding CurrentWeather.Temp, Mode = OneWay}" TextWrapping="Wrap" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyTemp}}" Grid.Column="0"/>
                    <Image Source="{Binding CurrentWeather.ImagePath, Mode = OneWay}" Grid.Column="1"/>

                </Grid>

                <TextBox x:Name="CurrentCondition" IsReadOnly = "True" TextAlignment="Center" Text="{Binding CurrentWeather.Condition, Mode = OneWay}" TextWrapping="Wrap" Grid.Row="2" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyText}}"/>
                <TextBox x:Name="MinMax" IsReadOnly = "True" TextAlignment="Center" Text="{Binding CurrentWeather.MinMax, Mode = OneWay}" TextWrapping="Wrap" Grid.Row="3" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyText}}"/>
                <TextBox x:Name="CurrentWind" IsReadOnly = "True" TextAlignment="Center" Text="{Binding CurrentWeather.Wind, Mode = OneWay}" TextWrapping="Wrap" Grid.Row="4" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyText}}"/>

            </Grid>

            <Grid x:Name="SelectLocation" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" Text="{Binding SearchText, Mode = TwoWay}" GotFocus="SearchBoxGotFocus" TextWrapping="Wrap" Grid.Column="0" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyTemp}}"/>
                    <Button x:Name="SearchBtn" Content="Ieškoti" Click="SearchBtnClick" Grid.Column="1" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyTemp}}"/>

                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="RefreshBtn" Content="Atnaujinti prognozę" Click="RefreshBtnClick" Grid.Column="0" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyTemp}}"/>
                    <Button x:Name="SelectBtn" Content="Pasirinkti" Click="SelectBtnClick" Grid.Column="1" FontSize="{Binding Path=ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}, Converter={StaticResource fontSizeConDailyTemp}}"/>
                </Grid>
                <DataGrid x:Name="PlacesDataGrid" Grid.Row="1" IsReadOnly = "True">
                   
                </DataGrid>
            </Grid>
        </Grid>



